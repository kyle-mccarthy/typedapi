{
  "name": "typescript-starter",
  "version": "0.0.1",
  "description": "Node.js starter with Typescript for backend web development",
  "main": "src/index.ts",
  "author": "Kyle McCarthy",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=9.9",
    "yarn": "^1.5.0"
  },
  "scripts": {
    "dev": "nodemon --watch 'src/**/*' -e ts --exec 'ts-node -r tsconfig-paths/register' ./src/index.ts",
    "test": "NODE_ENV=test mocha --globals routingControllersMetadataArgsStorage,SQL --exit --check-leaks --no-timeouts --async-only --require reflect-metadata --require source-map-support/register --require ts-node/register --require tsconfig-paths/register './**/*.spec.ts'",
    "coverage": "nyc yarn run test",
    "security": "nsp check",
    "build": "npx webpack --mode=production",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "bcrypt": "^2.0.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "pg": "^7.4.3",
    "redis": "^2.8.0",
    "routing-controllers": "^0.7.7",
    "typedi": "^0.7.3",
    "typeorm": "^0.2.6",
    "typescript": "^3.0.3",
    "winston": "https://github.com/winstonjs/winston"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@types/bcrypt": "^2.0.0",
    "@types/chai": "^4.1.3",
    "@types/koa": "^2.0.45",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.1.3",
    "@types/redis": "^2.8.6",
    "awesome-typescript-loader": "^5.2.0",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "mocha": "^5.2.0",
    "sql.js": "^0.5.0",
    "ts-node": "^6.0.5",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.10.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  }
}